/*----------HEADER INICIO----------------*/

.header-grande{
	background-color: #000000;
	height: 137.5px;
    margin-bottom: 35px;
}
.header-grande .header-logo{
	position: relative;
	top: 50%;
	left: 50%;
	transform:translate(-50%, -50%);
	width: 200px;
}
.header-grande .header-logo-zeta{
	display: none;
}
.header-chico{
    height: 55.5px;
    position: relative;
}
.header-chico .header-logo{
    width: 130px;
    left: 25px;
    top: 50%;
    transform:translate(0, -50%);
}
.header-chico .header-logo-zeta{
    width: 70px;
    display: block;
    position: absolute;
    right: 25px;
    top: 50%;
    transform:translate(0, -50%);
}

/*----------HEADER FIN----------------*/


/*------------LOGIN INICIO------------*/

.texto-login{
    font-family: 'brandon_grotesque_regularRg';
    color: #FFFFFF;
    width: 200px;
    margin: 0 auto;
    font-size: 0.99em;
    line-height: 20px;
}
.texto-login span{
    font-family: 'brandon_grotesqueblack';
    font-size: 1.74em;
}

/*------------LOGIN FIN------------*/

/*------------FORMULARIO INICIO------------*/

.formulario-login{
    margin-top: 35px;
}
.formulario-login input::-webkit-input-placeholder{
    font-family: 'brandon_grotesque_regularRg';
    color: #AD0F0A;
    padding-left: 10px;
    font-size: 0.95em;
}
.formulario-login input{
    width: 100%;
    height: 33px;
    margin-bottom: 3px;
    border: 1px solid #EA482D;
    line-height: 15px;
    padding-left: 10px;
}

#btnJugar{
    margin-top: 30px;
    margin-bottom: 30px;
    width: 200px;
}

/*------------FORMULARIO FIN------------*/



/*-------------NOTIFICACION MODAL INICIO ---------------*/

.notificacion-modal{
    width: 90%;
    background-color: white;
    box-shadow: 0.1px 0.1px 10px black;
    position: fixed;
    z-index: 17;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    border-radius: 3px;
    display: none;
}
.notificacion-modal p{
    text-align: center;
    padding-top: 40px;
    padding-bottom: 40px;
    color: gray;
    margin: 0px;
    font-family: brandon_grotesque_regularRg;
    font-size: 1.35em;
}
.notificacion-modal span{
    position: absolute;
    z-index: 17;
    font-size: 2em;
    color: brown;
    right: 15px;
    top: 10px;
}
.cargando{
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    color: white;
    z-index: 16;
    display: none;
}
.cargando i{
    font-size: 4em;
}
.fondo-negro{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 15;
    background-color: black;
    opacity: 0.8;
    display: none;
}

/*-------------NOTIFICACION MODAL FIN ---------------*/

/*-------------PREGUNTAS INICIO-------------*/

.pregunta{
    border-top: 2px solid white;
    border-bottom: 2px solid white;
    padding: 30px 0px;
}
.pregunta-texto{
    margin: 0px;
    font-family: 'brandon_grotesque_regularRg';
